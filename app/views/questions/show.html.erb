<h1><%= markdown(@question.title) %></h1>
<%= link_to 'Edit', edit_question_path(@question) %>
| <%= link_to 'Delete', question_path(@question), method: :delete, data: { confirm: 'Are you sure?' } %>

<p>
  <%= markdown(@question.description) %>
</p>

<h2>Answers:</h2>

<ol>
<% @question.answers.order(best: :desc, created_at: :desc).each do |answer| %>

  <li>
    <%= markdown(answer.description) %>
    <% if answer.best == true %>
      <div class = bestAnswer><strong>Best Answer</strong></div>
    <% else %>

    <% end %>
  </li>
<% end %>
</ol>

<%= form_for([@question, @question.answers.build]) do |f| %>
  <p>
    <%= f.label :description, 'Add an answer:' %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'All Questions', questions_path %>
