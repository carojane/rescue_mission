<h1><%= @question.title %></h1>
<%= link_to 'Edit', edit_question_path(@question) %>
| <%= link_to 'Destroy', question_path(@question), method: :delete, data: { confirm: 'Are you sure?' } %>

<p>
  <%= @question.description %>
</p>

<h2>Answers:</h2>

<ol>
<% @question.answers.order('created_at DESC').each do |answer| %>
  <li>
    <%= answer.description %>
  </li>
<% end %>
</ol>

<%= form_for([@question, @question.answers.build]) do |f| %>
  <p>
    <%= f.label :description, 'Add an answer:' %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'All Questions', questions_path %>
